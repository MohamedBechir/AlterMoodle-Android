<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/logintxt"
    android:orientation="vertical"
    android:paddingTop="40dp"
    tools:context=".fragments.ChartPerCourseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:orientation="horizontal"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/assignmentbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check your assignment"
            app:fontFamily="@font/lato_bold"
            android:textColor="@color/black"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check your stats"
            app:fontFamily="@font/lato_bold"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/rectangle"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        >

        <TextView
            android:id="@+id/courseCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="HELLO"
            android:textSize="20dp"
            android:layout_gravity="center"
            app:fontFamily="@font/lato_bold"
            />
        <TextView
            android:id="@+id/totalnumberass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="17dp"
            app:fontFamily="@font/lato_bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        >
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/rectangle"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <com.github.mikephil.charting.charts.PieChart
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/pie"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/totalassignments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato_bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato_bold"
                    />
                <LinearLayout
                    android:paddingTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="8dp"
                            android:layout_height="40dp"
                            android:background="@drawable/finishedrect"
                            >
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:id="@+id/finishedassignments"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/lato_bold"
                                android:paddingRight="20dp"
                                android:paddingLeft="10dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Finished"
                                android:textSize="13dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/lato_bold"
                                android:paddingRight="20dp"
                                android:paddingLeft="10dp"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="8dp"
                            android:layout_height="40dp"
                            android:background="@drawable/unifinishedrect"
                            >
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:id="@+id/unfinishedassignments"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/lato_bold"
                                android:paddingRight="20dp"
                                android:paddingLeft="10dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Unfinished"
                                android:textSize="13dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/lato_bold"
                                android:paddingRight="20dp"
                                android:paddingLeft="10dp"
                                />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>