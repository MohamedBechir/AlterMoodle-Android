<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.AssignmentFragment"
    android:background="@color/logintxt"
    android:paddingTop="40dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:orientation="horizontal"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check your assignment"
            app:fontFamily="@font/lato_bold"
            android:textColor="@color/black"
            />
        <Button
            android:id="@+id/statperassbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check your stats"
            app:fontFamily="@font/lato_bold"
            android:textColor="@color/black"
            />

    </LinearLayout>

<androidx.recyclerview.widget.RecyclerView
         android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/assignment_recycler_items"
        android:id="@+id/recycler_view_ass"
        />


</LinearLayout>